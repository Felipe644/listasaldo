algoritmo "EX4L2"
var
num1,num2,num3,primeiro,segundo,terceiro: inteiro
D:caracter
inicio
escreval("Digite o 1° valor")
leia(num1)
escreval("Digite o 2° valor")
leia(num2)
escreval("Digite o 3° valor")
leia(num3)
se(num1>num2)ou(num1>num3)entao
   primeiro<-num1
   segundo<-num2
   terceiro<-num3
fimse
se(num2>num1)ou(num2>num3)entao
   primeiro<-num2
   segundo<-num1
   terceiro<-num3
fimse
se(num3>num1)ou(num3>num2)entao
   primeiro<-num3
   segundo<-num1
   terceiro<-num2
fimse
escreval("Escolha [c] Para crescente e [d] Para decrescente: ")
leia(D)
escolha (D)
caso "c"
   escreval(primeiro)
   escreval(segundo)
   escreval(terceiro)
caso "d"
   escreval(terceiro)
   escreval(segundo)
   escreval(primeiro)
fimescolha
fimalgoritmo
